<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.fragment.PlayerDetailFragment">

    <TextView
        android:id="@+id/tv_player_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_text"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Sebastian Sebulonsen" />

    <TextView
        android:id="@+id/tv_player_dob_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        tools:text="2000-01-27" />

    <TextView
        android:id="@+id/tv_player_nationality_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        tools:text="Norway" />

    <TextView
        android:id="@+id/tv_player_position_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/dark_text"
        android:textSize="16sp"
        tools:text="Attacker" />

</LinearLayout>

